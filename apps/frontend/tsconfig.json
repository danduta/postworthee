{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@/components/*": ["components/*"],
			"@/context/*": ["context/*"],
			"@/lib/*": ["lib/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		".next/types/**/*.ts",
		"lib/theme.ts",
		"app",
		"components",
		"context",
		"models"
	],
	"exclude": ["node_modules"],
	"references": [{ "path": "../../packages/common" }]
}
